{
    "name": "ngx-ui-tour-ng-zorro",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "libs/ngx-ui-tour-ng-zorro/src",
    "prefix": "tour",
    "projectType": "library",
    "tags": ["libs"],
    "targets": {
        "prebuild": {
            "executor": "@nx/angular:package",
            "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
            "options": {
                "project": "libs/ngx-ui-tour-ng-zorro/ng-package.json"
            },
            "configurations": {
                "production": {
                    "tsConfig": "libs/ngx-ui-tour-ng-zorro/tsconfig.lib.prod.json"
                },
                "development": {
                    "tsConfig": "libs/ngx-ui-tour-ng-zorro/tsconfig.lib.json"
                }
            },
            "defaultConfiguration": "production"
        },
        "build": {
            "executor": "nx:run-commands",
            "outputs": ["{workspaceRoot}/dist/ngx-ui-tour-ng-zorro"],
            "options": {
                "parallel": false,
                "commands": ["nx prebuild {projectName}", "nx postbuild {projectName}"]
            }
        },
        "postbuild": {
            "executor": "nx:run-commands",
            "options": {
                "command": "shx cp README.md libs/ngx-ui-tour-ng-zorro/CHANGELOG.md  dist/ngx-ui-tour-ng-zorro/"
            }
        },
        "lint": {
            "executor": "@nx/eslint:lint"
        },
        "publish": {
            "executor": "nx:run-commands",
            "options": {
                "command": "npm publish ./dist/{projectName} --ignore-scripts || echo \"already published\""
            },
            "dependsOn": [
                {
                    "target": "build",
                    "params": "ignore"
                }
            ]
        }
    }
}
